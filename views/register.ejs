<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              sans: ['Inter', 'sans-serif'],
            },
            colors: {
              primary: '#6366f1',
              secondary: '#8b5cf6',
            },
          },
        },
      };
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet" />
    <style>
      body {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        animation: bgFlow 15s ease infinite;
        background-size: 400% 400%;
      }

      @keyframes bgFlow {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }
    </style>
  </head>

  <body class="min-h-screen flex items-center justify-center font-sans text-white">
    <div class="bg-white/10 backdrop-blur-md rounded-3xl shadow-2xl px-10 py-12 w-full max-w-md transition-all duration-500 hover:scale-[1.02]">

      <div class="text-center mb-8">
        <h1 class="text-4xl font-extrabold mb-2 bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-300">
          Create Account
        </h1>
        <p class="text-sm text-gray-200">Join us to unlock the future!</p>
      </div>

      <form action="/user/register" method="POST" class="space-y-6">
        <!-- Username -->
        <div>
          <label for="username" class="block text-sm font-medium mb-1">Username</label>
          <input
            type="text"
            id="username"
            name="username"
            required
            placeholder="Yuvraj"
            class="w-full px-4 py-3 bg-white/10 border border-white/30 text-white placeholder-gray-300 rounded-xl focus:ring-2 focus:ring-white/50 backdrop-blur-md focus:outline-none"
          />
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-medium mb-1">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="you@example.com"
            class="w-full px-4 py-3 bg-white/10 border border-white/30 text-white placeholder-gray-300 rounded-xl focus:ring-2 focus:ring-white/50 backdrop-blur-md focus:outline-none"
          />
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-medium mb-1">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            placeholder="••••••••"
            class="w-full px-4 py-3 bg-white/10 border border-white/30 text-white placeholder-gray-300 rounded-xl focus:ring-2 focus:ring-white/50 backdrop-blur-md focus:outline-none"
          />
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full py-3 bg-gradient-to-r from-primary to-secondary hover:from-indigo-600 hover:to-purple-600 transition-all duration-300 text-white font-semibold rounded-xl shadow-lg transform hover:-translate-y-0.5"
        >
          Register
        </button>
      </form>

      <!-- Redirect to login -->
      <p class="text-sm text-center text-gray-300 mt-6">
        Already have an account?
        <a href="/user/login" class="text-white font-semibold hover:underline">Login here</a>
      </p>
    </div>
  </body>
</html>
